
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Responsive Images</title>
</head>
<body style="background-color: #F2F2F2">
    <section>
        <h1>Padding-Bottom Hack</h1>
        <br />
        <style>
            .img-container {
                padding-bottom: 53.74%;
                position: relative;
                height: 0;
                background-color: #333;
                overflow: hidden;
            }

            .img-container img {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }
        </style>
        <div class="img-container">
            <img src="~/Content/ImagesWork/multiplex-image2.png" />
        </div>
    </section>
</body>
</html>
